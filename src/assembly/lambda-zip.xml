<assembly>
  <id>lambda-zip</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
    <includes>
      <include>${project.groupId}:${project.artifactId}</include>
    </includes>
    <unpack>true</unpack>
    <unpackOptions>
      <excludes>
        <exclude>META-INF/MANIFEST.MF</exclude>
        <exclude>META-INF/maven/**</exclude>
      </excludes>
    </unpackOptions>
    </dependencySet>
    <dependencySet>
    <useProjectArtifact>false</useProjectArtifact>
    <unpack>false</unpack>
    <scope>runtime</scope>
    <outputDirectory>lib</outputDirectory>
    </dependencySet>
  </dependencySets>
</assembly>
